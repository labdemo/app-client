<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:background="@color/titlebar_blue"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/titleBackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="@string/back"
        android:textColor="@color/whitecolor"
        android:textSize="17sp"
        android:drawableLeft="@drawable/pic_back" />"
    
    <TextView
        android:id="@+id/titleCenterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/i_search_book"
        android:textColor="@color/whitecolor"
        android:textSize="16sp"
        android:drawableLeft="@drawable/pic_serach40" />
    
    <TextView
        android:id="@+id/titleRightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/whitecolor"
        android:textSize="23sp" />

</RelativeLayout>
