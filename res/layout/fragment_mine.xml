<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:id="@+id/minePic"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/pic_mine_background" >
            
            <ImageView
                android:id="@+id/head_defalut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/pic_mine_default" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_defalut"
                android:layout_centerHorizontal="true"
                android:text="@string/user_name"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mineSettings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2.5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:orientation="horizontal" >

                <com.app.base.BaseHomeButton
                    android:id="@+id/my_order_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@color/blue_module"
                    android:text="@string/my_order" >
                </com.app.base.BaseHomeButton>

                <com.app.base.BaseHomeButton
                    android:id="@+id/my_book_store_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@color/blue_module"
                    android:text="@string/my_bookstore" >
                </com.app.base.BaseHomeButton>

                <com.app.base.BaseHomeButton
                    android:id="@+id/my_collection_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@color/blue_module"
                    android:text="@string/my_collection" >
                </com.app.base.BaseHomeButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:orientation="horizontal" >

                <com.app.base.BaseHomeButton
                    android:id="@+id/my_book_friends_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@color/blue_module"
                    android:text="@string/my_book_friends" >
                </com.app.base.BaseHomeButton>

                <com.app.base.BaseHomeButton
                    android:id="@+id/my_message_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@color/blue_module"
                    android:text="@string/my_message" >
                </com.app.base.BaseHomeButton>

                <com.app.base.BaseHomeButton
                    android:id="@+id/my_settings_button"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="@color/blue_module"
                    android:text="@string/my_settings" >
                </com.app.base.BaseHomeButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>